<Page x:Class="qw.application_pages.utils.SqlServerSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:qw.application_pages.views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SqlServerSelection">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Выбор SQL Сервера" HorizontalContentAlignment="Center"></Label>

        <ComboBox Name="serverComboBox" Width="200" Grid.Row="1"></ComboBox>

        <Button Grid.Row="2" Content="Выбрать" Click="chooseSqlServerButtonClick"></Button>
    </Grid>
</Page>
